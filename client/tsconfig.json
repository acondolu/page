{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "module": "es6",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node"
  }
}
